<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:padding="3dp"
        android:id="@+id/img_searchMenu_logo"
        android:layout_width="83dp"
        android:layout_height="83dp" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_margin="2dp"
                android:id="@+id/tv_searchMenu_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginLeft="4dp"
                android:id="@+id/img_searchMenu_hot"
                android:background="@mipmap/hot"
                android:layout_width="24dp"
                android:layout_height="24dp" />
            <ImageView
                android:layout_marginLeft="4dp"
                android:id="@+id/img_searchMenu_new"
                android:background="@mipmap/new_menu"
                android:layout_width="24dp"
                android:layout_height="24dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_margin="2dp"
                android:gravity="center"
                android:textSize="12dp"
                android:id="@+id/tv_searchMenu_sold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="2dp"
                android:background="@mipmap/good"
                android:layout_width="12dp"
                android:layout_height="12dp" />
            <TextView
                android:layout_margin="2dp"
                android:gravity="center"
                android:textSize="12dp"
                android:id="@+id/tv_searchMenu_good"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_margin="2dp"
                android:gravity="center"
                android:textColor="@color/orange"
                android:layout_alignParentLeft="true"
                android:id="@+id/tv_searchMenu_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageButton
                android:visibility="gone"
                android:layout_toLeftOf="@+id/tv_searchMenu_num"
                android:id="@+id/img_searchMenu_minus"
                android:background="@mipmap/minus"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <TextView
                android:visibility="gone"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:id="@+id/tv_searchMenu_num"
                android:layout_toLeftOf="@+id/img_searchMenu_add"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <ImageButton
                android:id="@+id/img_searchMenu_add"
                android:layout_alignParentRight="true"
                android:background="@mipmap/add"
                android:layout_width="25dp"
                android:layout_height="25dp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>